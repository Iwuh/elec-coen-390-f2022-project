<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.StudentMainActivity">

    <TextView
        android:id="@+id/libraryhours_textview"
        android:layout_width="389dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:gravity="center|top"
        android:text="hour"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnComputerUse" />

    <Button
        android:id="@+id/btnFavorites"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:layout_marginStart="106dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_bottom_rounded"
        android:text="Favorites"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnHours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/btnstudent_announcement" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Choose Menu Options"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <Button
        android:id="@+id/btnNoiseLevel"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:layout_marginStart="106dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_bottom_rounded"
        android:text="Noise Level"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOccupancy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnOccupancy"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_bottom_rounded"
        android:text="Occupancy"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnstudent_announcement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNoiseLevel" />

    <Button
        android:id="@+id/btnstudent_announcement"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:layout_marginStart="106dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_bottom_rounded"
        android:text="Announcements"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFavorites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNoiseLevel" />

    <Button
        android:id="@+id/btnHours"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_bottom_rounded"
        android:text="Hours"
        app:layout_constraintBottom_toTopOf="@+id/btnComputerUse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFavorites" />

    <Button
        android:id="@+id/btnComputerUse"
        android:layout_width="198dp"
        android:layout_height="58dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="107dp"
        android:background="@drawable/shape_bottom_rounded"
        android:text="Available Computers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHours" />

</androidx.constraintlayout.widget.ConstraintLayout>
