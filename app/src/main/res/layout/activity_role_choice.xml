<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".roledivision.RoleChoiceActivity">

    <Button
        android:id="@+id/btnLibrarian"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_bottom_rounded"
        android:text="Library worker"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26999998">

    </Button>

    <Button
        android:id="@+id/btnStudent"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_bottom_rounded"
        android:text="Student"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLibrarian"
        app:layout_constraintVertical_bias="0.13999999">

    </Button>

    <TextView
        android:id="@+id/textViewRoleChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="170dp"
        android:text="I am a..."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>